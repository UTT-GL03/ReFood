{
  "docs": [
    {{#repeat 100}}
    {
      "_id": "user-{{@index}}",
      "pseudo": "{{firstName}} {{lastName}}",
      "note": {{float 3 5 1}},
      "type_user": "user"
    }{{#unless @last}},{{/unless}}
    {{/repeat}},

    {{#repeat 300}}
    {
      "_id": "offer-{{@index}}",
      "titre": "{{random 'pommes' 'pains' 'salade'}}",
      "description": "{{lorem 20}}",
      "quantite": {{int 1 10}},
      "type": "{{random 'Fruits' 'Légumes' 'Pain'}}",
      "etat": "{{random 'Frais' 'Emballé' 'Cuit'}}",
      "tags": ["{{random 'bio' 'local' 'sans gluten' 'sans sucre'}}"],
      "date_publication": "{{date '2025-10-10' '2025-10-13' 'YYYY-MM-DD'}}",
      "date_limite": "{{date '2025-10-14' '2025-10-20' 'YYYY-MM-DD'}}",
      "ville": "{{random 'Paris' 'Lyon' 'Marseille'}}",
      "statut": "{{random 'Disponible' 'Réservé'}}",
      "utilisateur_id": {{int 0 99}}
    }{{#unless @last}},{{/unless}}
    {{/repeat}}
  ]
}
